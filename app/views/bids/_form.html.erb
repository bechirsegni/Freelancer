<h4 class="m-t-lg m-b">Bid on this project</h4>
<%= form_for([@job, @job.bids.build]) do |f| %>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price,class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :time %>
      <%= f.text_field :time,class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :proposal %>
      <%= f.text_area :proposal,class:'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Submit Bid' , class:'btn btn-success'%>
    </div>
<% end %>
