<%= provide(:title,'Account Settings')%>
<div class="panel-body">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true }) do |f| %>
<div class="page-content-wrapper ">
  <div class="content">
    <div class="container-fluid container-fixed-lg">
      <div class="panel panel-transparent">
        <div class="panel-heading">
          <div class="container-fluid p-t-30 p-b-30 ">
            <div class="row">
              <div class="col-md-6">
                <div class="container-xs-height">
                  <div class="row-xs-height">
                    <div class="social-user-profile col-xs-height text-center col-top">
                      <div class="thumbnail-wrapper d48 circular bordered b-white">
                        <%=image_tag current_user.image.url , width:'55px', height: '55px'%>
                      </div>
                      <br>
                      <i class="fa fa-check-circle text-success fs-16 m-t-10"></i>
                    </div>
                    <div class="col-xs-height p-l-20">
                      <h3 class="no-margin"><%=current_user.name%></h3>
                      <p class="no-margin fs-16"><%=current_user.slogan%></p>
                      <p class="hint-text m-t-5 small"><%=current_user.email%></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <p class="no-margin fs-16">Hi My Name is <%=current_user.name%>, &amp; heres what i do ...</p>
                <p class="hint-text m-t-5 small"><%=current_user.description%></p>
              </div>
            </div>
          </div>
        </div>

              <h3>Profile Details</h3>
              <div class="form-group">
                <label for="fname" class="col-sm-3 control-label">Profile Picture</label>
                <div class="col-sm-9">
                  <%= f.file_field :image , class:'form-control'%>
                </div>
              </div>
              <br>
                <div class="form-group">
                  <label for="fname" class="col-sm-3 control-label">Name</label>
                  <div class="col-sm-9">
                    <%= f.text_field :name , class:'form-control', placeholder:'Full Name'%>
                  </div>
                </div>
                <br>
              <div class="form-group">
                <label for="name" class="col-sm-3 control-label">Description</label>
                <div class="col-sm-9">
                  <%= f.text_field :username , class:'form-control', placeholder:'Pick a Username'%>
                </div>
              </div>
              <br>
                <div class="form-group">
                  <label for="Slogan" class="col-sm-3 control-label">What do you do ?</label>
                  <div class="col-sm-9">
                    <%= f.text_field :slogan , class:'form-control', placeholder:'Ex: Web Developer, Graphic Designer'%>
                  </div>
                </div>
                <br>
                <div class="form-group">
                  <label for="name" class="col-sm-3 control-label">Description</label>
                  <div class="col-sm-9">
                    <%= f.text_area :description , class:'form-control', placeholder:'Briefly Describe your Abilities'%>
                  </div>
                </div>
                <br><br>
              <h3>Address</h3>
              <div class="form-group">
                <label for="Slogan" class="col-sm-3 control-label">Address</label>
                <div class="col-sm-9">
                  <%= f.text_field :location , class:'form-control', placeholder:'Your Complete Address'%>
                </div>
              </div>
              <br>
              <div class="form-group">
                <label for="Slogan" class="col-sm-3 control-label">Phone</label>
                <div class="col-sm-9">
                  <%= f.text_field :phone , class:'form-control', placeholder:'+216 ---'%>
                </div>
              </div>
              <br>
              <h3>Account Settings</h3>
              <div class="form-group">
                <label for="Slogan" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                  <%= f.email_field :email , class:'form-control', placeholder:'email@example.com', autofocus: true %>
                </div>
              </div>
              <br>
              <div class="form-group">
                <label for="Slogan" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                  <%= f.password_field :password , class:'form-control'%>
                </div>
              </div>
              <br>
              <div class="form-group">
                <label for="Slogan" class="col-sm-3 control-label">Password Confirmation</label>
                <div class="col-sm-9">
                  <%= f.password_field :password_confirmation , class:'form-control'%>
                </div>
              </div>
              <br>
                <div class="row">
                  <div class="col-sm-3">
                    <p>I hereby certify that the information above is true and accurate. </p>
                  </div>
                  <div class="col-sm-9">
                    <%= f.submit 'Submit', class:'btn btn-success', type:'submit' %>
                  </div>
                </div>
            <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
