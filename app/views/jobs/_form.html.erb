<%= form_for @job, :multipart => true do|f| %>
    <%=f.label :title%>
    <%=f.text_field :title%>

    <%=f.label :description%>
    <%=f.text_area :description%>


    <%=f.label :price%>
    <%=f.text_field :price%>

    <%=f.label :duration%>
    <%=f.text_field :duration%>

    <%=f.label :location%>
    <%=f.text_field :location%>

    <%=f.label :document%>
    <%=f.file_field :document %>

    <%= f.collection_select(:category_id, Category.all, :id, :name, {:prompt => 'Choose a category'},
                            {class: "form-control"})%>
    <%=f.submit 'Submit'%>

<%end%>