<%if notice %>
    <div class="pgn-wrapper" data-position="top-right">
      <div class="pgn pgn-circle">
        <div class="alert alert-success">
          <div>
            <div class="pgn-thumbnail">
              <div>
                <%= image_tag current_user.image, width: 40, height: 40, style:'display: inline-block' %>
              </div>
            </div>
            <div class="pgn-message">
              <div>
                <p class="bold"><%=current_user.name%></p>
                <p><%= notice %></p>
              </div>
            </div>
          </div>
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
        </div>
      </div>
    </div>
<%elsif alert %>
    <div class="pgn-wrapper" data-position="top-right">
      <div class="pgn pgn-circle">
        <div class="alert alert-danger">
          <div>
            <div class="pgn-thumbnail">
              <div>
                <%= image_tag current_user.image, width: 40, height: 40, style:'display: inline-block' %>
              </div>
            </div>
            <div class="pgn-message">
              <div>
                <p class="bold"><%=current_user.name%></p>
                <p><%= alert %></p>
              </div>
            </div>
          </div>
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
        </div>
      </div>
    </div>
<%end%>